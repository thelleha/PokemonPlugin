{
    "manifest_version": 3,
    "name": "Pokémon Play Auto Login",
    "version": "0.0.1",
    "description": "Automatically clicks the Log In button on Pokémon Play",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://play-tools.pokemon.com/tournaments/my_tournaments*"],
            "js": ["content_my_tournaments.mjs"]
        },
        {
            "matches": ["https://www.pokemon.com/us/pokemon-trainer-club/play-pokemon-leagues/players/1432901/add"],
            "js": ["content_pokemon_players_add.mjs"]
        }
    ],
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
  }
  